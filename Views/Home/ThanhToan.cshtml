@model RentalHosting_64130107.Models.ThanhToanModel_64130107

<div class="container mt-4">
	<h2 class="mb-4">Thanh toán</h2>

	@if (ViewBag.Error != null)
	{
	<div class="alert alert-danger">
		@ViewBag.Error
	</div>
	}

	<form method="post" asp-action="ThanhToan">
		<div class="form-group">
			<label for="amount">Số tiền cần thanh toán (VNĐ):</label>
			<input type="number" class="form-control" id="amount" name="amount" min="1" required />
		</div>

		<div class="form-group mt-3">
			<label for="purpose">Nội dung chuyển khoản (ID hợp đồng):</label>
			<textarea class="form-control" id="purpose" name="purpose" rows="2" required></textarea>
		</div>

		<button type="submit" class="btn btn-primary mt-3">Tạo mã QR</button>
	</form>

	@if (Model != null)
	{
	<div class="mt-4">
		<h3>Thông tin thanh toán:</h3>
		<ul class="list-group mb-3">
			<li class="list-group-item"><strong>Ngân hàng:</strong> @Model.BankName</li>
			<li class="list-group-item"><strong>Số tài khoản:</strong> @Model.BankAccount</li>
			<li class="list-group-item"><strong>Số tiền:</strong> @Model.Amount.ToString("N0") VNĐ</li>
			<li class="list-group-item"><strong>Nội dung chuyển khoản:</strong> @Model.Purpose</li>
		</ul>

		<h3>Mã QR:</h3>
		<div class="text-center">
			<img src="@Model.QRCodeImage" alt="Mã QR Thanh Toán" class="img-fluid" style="max-width: 300px;" />
		</div>
	</div>
	}
</div>