<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RentalHosting_64130107</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RentalHosting_64130107.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="favicon.ico"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Rental Hosting</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="HopDongController_64130107" asp-action="GetContracts">Dịch vụ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SanPham">Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Hỗ trợ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="KhuyenMai">Khuyễn mãi</a>
                    </li>
                </ul>
                <!-- Kiểm tra trạng thái đăng nhập -->
                <ul class="navbar-nav">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                    <!-- Avatar dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle user-avatar" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="NguoiDungController_64130107" asp-action="EditProfile">Chỉnh sửa thông tin</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="NguoiDungController_64130107" asp-action="ChangePassword">Đổi mật khẩu</a>
                            </li>
                            <li>
                                <form asp-area="" asp-controller="NguoiDungController_64130107" asp-action="Logout" method="post" class="d-inline">
                                    <button class="dropdown-item" type="submit">Đăng xuất</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                    }
                    else
                    {
                    <!-- Nút Đăng nhập -->
                    <li class="nav-item">
                        <a class="btn btn-primary" asp-area="" asp-controller="NguoiDungController_64130107" asp-action="Login">Đăng nhập</a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - RentalHosting_64130107 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>